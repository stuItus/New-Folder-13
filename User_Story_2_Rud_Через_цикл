#include "stdafx.h"
#include <GL/glut.h>

// розміри вікна
float WinWid=1200.0;
float WinHei=600.0;

//функція малювання
void Draw() 
{
       
	  float a = 0;
	glClear(GL_COLOR_BUFFER_BIT); //малювання фону
        glColor3f(0.0f,0.0f,1.0f);
 
for(int i=0; i<4; i++)	//цикл для першого ряду 
 {
GLUquadricObj * cylinder;
cylinder=gluNewQuadric();
gluQuadricDrawStyle(cylinder,GLU_LINE);	
glTranslatef(30.0, 0.0, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
 }
glTranslatef(-105.0, 26.0, 0.0); //перехід до другого ряду
 for(int i=0; i<3; i++)	  //цикл для другого ряду 
 {
GLUquadricObj * cylinder;
cylinder=gluNewQuadric();
gluQuadricDrawStyle(cylinder,GLU_LINE);	
glTranslatef(30.0, 0.0, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
 }
glTranslatef(-75.0, 26.0, 0.0); //перехід до третього ряду
 for(int i=0; i<2; i++)	 //цикл для третього ряду
 {
GLUquadricObj * cylinder;
cylinder=gluNewQuadric();
gluQuadricDrawStyle(cylinder,GLU_LINE);	
glTranslatef(30.0, 0.0, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
 }
 GLUquadricObj * cylinder;
cylinder=gluNewQuadric();
gluQuadricDrawStyle(cylinder,GLU_LINE);	
 glTranslatef(-15.0, 26.0, 0.0);        //перехід до четвертого ряду
gluCylinder(cylinder,15.0,15.0,0.1,100,4);  //верхня кулька

        glEnd();
        glFlush();
}

//функція ініціалізації
void Initialize()
{
 glClearColor(1.0, 1.0, 1.0, 1.0);
        glMatrixMode(GL_PROJECTION);
        glLoadIdentity();
        glOrtho(-WinWid/2, WinWid/2, -WinHei/2, WinHei/2, -200.0, 200.0);
        glMatrixMode(GL_MODELVIEW);
       
        

}



int main(int argc, char **argv) 
{
    
	//ініціалізація
	glutInit(&argc, argv);  // інійіалізація
	glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB); //режим роботи дисплея
	glutInitWindowSize(WinWid,WinHei);  //розмір вікна
	glutInitWindowPosition(100,200); //позиція вікна від лівого верхнього краю
	glutCreateWindow("Кульки");  //створення вікна
	
	
	//реєстрація
	glutDisplayFunc(Draw); //малювання
	Initialize();  // інійіалізація
	glutMainLoop(); //головний цикл

	return 0;
}
