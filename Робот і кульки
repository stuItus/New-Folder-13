#include "stdafx.h"
#include <GL/glut.h>

// розміри вікна
float WinWid=1200.0;
float WinHei=600.0;

//функція малювання
void Draw() 
{
        glClear(GL_COLOR_BUFFER_BIT); //малювання фону
        glColor3f(0.0,0.0,0.0); //задання чорного кольору для малювання
GLUquadricObj * cylinder;

cylinder=gluNewQuadric();

gluQuadricDrawStyle(cylinder,GLU_LINE);

glTranslatef(-500.0, -100.0, 0.0);  //корекція положення  куль і робота


glTranslatef(0.0, 0.0, 0.0);              //рух кульки №1
gluCylinder(cylinder,8.0,8.0,0.1,10,4);  // кулька №1 (справа знизу)
glTranslatef(-16.0, 0.0, 0.0);           //рух кульки №2
gluCylinder(cylinder,8.0,8.0,0.1,10,4);   // кулька №2
glTranslatef(-16.0, 0.0, 0.0);           //рух кульки №3
gluCylinder(cylinder,8.0,8.0,0.1,10,4);   // кулька №3
glTranslatef(-16.0, 0.0, 0.0);           //рух кульки №4(зліва знизу)
gluCylinder(cylinder,8.0,8.0,0.1,10,4);   // кулька №4
glTranslatef(8.0, 14.0, 0.0);           //рух кульки №5 
gluCylinder(cylinder,8.0,8.0,0.1,10,4);   // кулька №5 (другий ряд зліва)
glTranslatef(16.0, 0.0, 0.0);           //рух кульки №6
gluCylinder(cylinder,8.0,8.0,0.1,10,4);   // кулька №6
glTranslatef(16.0, 0.0, 0.0);           //рух кульки №7
gluCylinder(cylinder,8.0,8.0,0.1,10,4);   // кулька №7 (другий ряд зправа)
glTranslatef(-8.0, 14.0, 0.0);           //рух кульки №8 
gluCylinder(cylinder,8.0,8.0,0.1,10,4);   // кулька №8 (третій ряд зправа)
glTranslatef(-16.0, 0.0, 0.0);           //рух кульки №9 
gluCylinder(cylinder,8.0,8.0,0.1,10,4);   // кулька №9 (третій ряд зліва)
glTranslatef(8.0, 14.0, 0.0);           //рух кульки №10 
gluCylinder(cylinder,8.0,8.0,0.1,10,4);   // кулька №10 (верхня)

//Робот Сані

glTranslatef(3.0, 95.0, 0.0);  //корекція положення  робота

glBegin(GL_LINE_STRIP);
        glVertex2f(-20, 20);        
        glVertex2f(20,20);
        glVertex2f(20, 0);
        glVertex2f(-20, 0);
        glVertex2f(-20, 20);        
        glVertex2f(-20, 0);
        glVertex2f(-10, 0);
        glVertex2f(-10, -10);
        glVertex2f(2, -10);
        glVertex2f(2, 0);
        glVertex2f(2, -10);
        glVertex2f(-5, -10);
        glVertex2f(-5, -70);
        glVertex2f(-1, -70);
        glVertex2f(-1, -10);
        glVertex2f(-1, -70);
        glVertex2f(-14, -70);
        glVertex2f(9, -70);
        glVertex2f(9, -90);
        glVertex2f(5, -90);
        glVertex2f(5, -70);
        glVertex2f(-14, -70);
        glVertex2f(-14, -90);
        glVertex2f(-10, -90);
        glVertex2f(-10, -70);
        glVertex2f(-10, -74);
        glVertex2f(5, -74);
	//кінець




glEnd();
        glFlush();
}

//функція ініціалізації
void Initialize()
{
 glClearColor(1.0, 1.0, 1.0, 1.0);
        glMatrixMode(GL_PROJECTION);
        glLoadIdentity();
        glOrtho(-WinWid/2, WinWid/2, -WinHei/2, WinHei/2, -200.0, 200.0);
        glMatrixMode(GL_MODELVIEW);      
}

int main(int argc, char **argv) 
{
    
	//ініціалізація
	glutInit(&argc, argv);  // інійіалізація
	glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB); //режим роботи дисплея
	glutInitWindowSize(WinWid,WinHei);  //розмір вікна
	glutInitWindowPosition(100,200); //позиція вікна від лівого верхнього краю
	glutCreateWindow("Кульки");  //створення вікна
	
	
	//реєстрація
	glutDisplayFunc(Draw); //малювання
	Initialize();  // інійіалізація
	glutMainLoop(); //головний цикл

	return 0;
}
