#include "stdafx.h"
#include <GL/glut.h>

float WinWid=800.0;
float WinHei=400.0;

void Draw()
{
        glClear(GL_COLOR_BUFFER_BIT);
        glColor3f(0.0, 0.0, 0.0);
        glBegin(GL_LINE_STRIP);
        glVertex2f(-175, 175);        
        glVertex2f(175, 175);
        glVertex2f(175, 160);
        glVertex2f(-175, 160);
        glVertex2f(-175, 175);
        glEnd();
		glBegin(GL_LINE_STRIP);
        glVertex2f(-165, 160);        
        glVertex2f(-165, 130);
        glVertex2f(-160, 130);
        glVertex2f(-160, 160);
        glEnd();
		glBegin(GL_LINE_STRIP);
        glVertex2f(165, 160);        
        glVertex2f(165, 130);
        glVertex2f(160, 130);
        glVertex2f(160, 160);
        glEnd();
		glBegin(GL_LINE_STRIP);
        glVertex2f(-160, 140);        
        glVertex2f(-159, 150);
        glVertex2f(-158, 140);
        glVertex2f(-157, 150);
		glVertex2f(-156, 140);
		glVertex2f(-155, 150);
        glEnd();
		glBegin(GL_LINE_STRIP);
        glVertex2f(160, 140);        
        glVertex2f(159, 150);
        glVertex2f(158, 140);
        glVertex2f(157, 150);
		glVertex2f(156, 140);
		glVertex2f(155, 150);
        glEnd();
        glFlush();
}
void Initialize()
{
        glClearColor(1.0, 1.0, 1.0, 1.0);
        glMatrixMode(GL_PROJECTION);
        glLoadIdentity();
        glOrtho(-WinWid/4, WinHei/2, -WinWid/4, WinHei/2, -1.0, 1.0);
}


int main (int argc, char** argv)
{
        //Ініціалізація
        glutInit(&argc, argv);
        glutInitDisplayMode(GLUT_SINGLE|GLUT_RGB);
        glutInitWindowSize(WinWid,WinHei);
        glutInitWindowPosition(100,200);
        glutCreateWindow("Бігуча Планка");
        //Реєстрація
        glutDisplayFunc(Draw);//Малювання
        Initialize();
        glutMainLoop();

        return 0;
}
