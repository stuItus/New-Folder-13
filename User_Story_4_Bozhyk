
#include "stdafx.h"
#include "gl/glut.h"

float WinWid=400.0;
float WinHei=400.0;

void Draw()
{
	glClear(GL_COLOR_BUFFER_BIT);
	glColor3f(0.0, 0.0, 0.0);
	glBegin(GL_LINE_STRIP);
	glVertex2f(-20, 20);	
	glVertex2f(20,20);
	glVertex2f(20, 0);
	glVertex2f(-20, 0);
	glVertex2f(-20, 20);	
	glVertex2f(-20, 0);
	glVertex2f(-10, 0);
	glVertex2f(-10, -10);
	glVertex2f(2, -10);
	glVertex2f(2, 0);
	glVertex2f(2, -10);
	glVertex2f(-5, -10);
	glVertex2f(-5, -70);
	glVertex2f(-1, -70);
	glVertex2f(-1, -10);
	glVertex2f(-1, -70);
	glVertex2f(-14, -70);
	glVertex2f(9, -70);
	glVertex2f(9, -90);
	glVertex2f(5, -90);
	glVertex2f(5, -70);
	glVertex2f(-14, -70);
	glVertex2f(-14, -90);
	glVertex2f(-10, -90);
	glVertex2f(-10, -70);
	glVertex2f(-10, -74);
	glVertex2f(5, -74);

	glEnd();
	glFlush();
}
void Initialize()
{
	glClearColor(1.0, 1.0, 1.0, 1.0);
	glMatrixMode(GL_PROJECTION);
	glLoadIdentity();
	glOrtho(-WinWid/2, WinHei/2, -WinWid/2, WinHei/2, -200.0, 200.0);
}

int main (int argc, char** argv)
{
	//Ініціалізація
	glutInit(&argc, argv);
	glutInitDisplayMode(GLUT_SINGLE|GLUT_RGB);
	glutInitWindowSize(WinWid,WinHei);
	glutInitWindowPosition(100,200);
	glutCreateWindow("Робот");
	//Регістрація
	glutDisplayFunc(Draw);//Малювання
	Initialize();
	glutMainLoop();

	return 0;
}
