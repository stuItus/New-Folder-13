#include "stdafx.h"
#include <GL/glut.h>

float WinWid=1200.0;
float WinHei=600.0;

void Draw()
{                   
            float a = 0, b = 0;
        glClear(GL_COLOR_BUFFER_BIT);
		
        glColor3f(0.0, 0.0, 0.0);
                                                                                                                                                                                       //Початок кульок
                
                                                                                                                                                                                        //Кінець кульок
                                                                                                                                                                                        
                                                                                                                                                                                        //Початок Робота
                                glBegin(GL_LINE_STRIP);
        glVertex2f(-555, 255);
        glVertex2f(-555, 200);
        glVertex2f(-385, 200);
        glVertex2f(-385, 255);
                        glEnd();
                                glBegin(GL_LINE_STRIP);
        glVertex2f(-535, 200);
        glVertex2f(-527, 155);
        glVertex2f(-413, 155);
        glVertex2f(-405, 200);
                        glEnd();
                                glBegin(GL_LINE_STRIP);
        glVertex2f(-512, 155);
        glVertex2f(-504, 115);
        glVertex2f(-436, 115);
        glVertex2f(-428, 155);
                        glEnd();
                                glBegin(GL_LINE_STRIP);
        glVertex2f(-489, 115);
        glVertex2f(-481, 75);
        glVertex2f(-459, 75);
        glVertex2f(-451, 115);
                        glEnd();
                                glBegin(GL_LINE_STRIP);
        glVertex2f(-475, 75);
        glVertex2f(-475, -60);
        glVertex2f(-465, -60);
        glVertex2f(-465, 75);
                        glEnd();
                        glBegin(GL_LINE_STRIP);
        glVertex2f(-485, -60);
        glVertex2f(-455, -60);
        glVertex2f(-448, -67);
        glVertex2f(-448, -97);
                glVertex2f(-455, -97);
        glVertex2f(-455, -69.5);
        glVertex2f(-457.5, -67);
        glVertex2f(-482.5, -67);
                glVertex2f(-485, -69.5);
                glVertex2f(-485, -97);
                glVertex2f(-492, -97);
                glVertex2f(-492, -67);
                glVertex2f(-485, -60);
                        glEnd();
                                                                                                                                                                                        //Кінець робота
                                                                                                                                                                                        //Початок планки
                                glBegin(GL_LINE_STRIP);
        glVertex2f(-585, 270);
        glVertex2f(585, 270);
        glVertex2f(585, 255);
        glVertex2f(-585, 255);
        glVertex2f(-585, 270);
                        glEnd();
                glBegin(GL_LINE_STRIP);
        glVertex2f(-575, 255);
        glVertex2f(-575, 230);
        glVertex2f(-565, 230);
        glVertex2f(-565, 255);
                        glEnd();
                glBegin(GL_LINE_STRIP);
        glVertex2f(575, 255);
        glVertex2f(575, 230);
        glVertex2f(565, 230);
        glVertex2f(565, 255);
                        glEnd();
                glBegin(GL_LINE_STRIP);
        glVertex2f(-565, 250);
        glVertex2f(-563, 235);
        glVertex2f(-561, 250);
        glVertex2f(-559, 235);
        glVertex2f(-557, 250);
        glVertex2f(-555, 235);
                        glEnd();
                glBegin(GL_LINE_STRIP);
        glVertex2f(565, 250);
        glVertex2f(563, 235);
        glVertex2f(561, 250);
        glVertex2f(559, 235);
        glVertex2f(557, 250);
        glVertex2f(555, 235);
                        glEnd();
                                                                                                                                                                                                        //Кінець планки

                                                                                                                                                                                                        //Початок ялинки
                glColor3f(0.0, 1.0, 0.0);
                                glBegin(GL_LINE_STRIP);
        glVertex2f(410, -187);
        glVertex2f(410, -217);
        glVertex2f(430, -217);
        glVertex2f(430, -187);
                        glEnd();
                         for(int i=0; i<6; i++)
        {
                glBegin(GL_LINE_LOOP);
                glColor3f(0.0, 1.0, 0.0);        
                glVertex2f(260+b, -187+a);        //a
                glVertex2f(260+b, -167+a);        //b
                glVertex2f(580-b, -167+a);        //c
                glVertex2f(580-b, -187+a);        //d
                a += 30;
                b += 30;
                glEnd();
        }
                                                                                                                                                                                                        //Кінець ялинки                

                                                                                                                                                                                                        //Підлога початок
                             glBegin(GL_LINE_STRIP);
                glColor3f(0.0, 0.0, 0.0);
        glVertex2f(-600, -217);
        glVertex2f(600, -217);
                        glEnd();
                       
						
		
	
	
						{
       
	  float a = 0, b = 0,c = 0, d = 0;
	
	 glPushMatrix();
        glColor3f(0.0f,0.0f,1.0f);
 glTranslatef(-425.0, -202.0, 0.0);
for(int i=0; i<2; i++)	//цикл для НЕПАРНИХ кульок  
 {
GLUquadricObj * cylinder;
cylinder=gluNewQuadric();
gluQuadricDrawStyle(cylinder,GLU_LINE);	

glTranslatef(0.0-a, 0.0, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
glTranslatef(0.0+a-a/4, 0.0+b, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
glTranslatef(0.0-a, 0.0, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
glTranslatef(0.0+a/4, 0.0+b, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
a += 60;
b += 25;
 }
for(int i=0; i<2; i++)	//цикл для ПАРНИХ кульок  
 {
GLUquadricObj * cylinder;
cylinder=gluNewQuadric();
gluQuadricDrawStyle(cylinder,GLU_LINE);	
glTranslatef(0.0+c/2, 0.0-2*d, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
glTranslatef(0.0-c, 0.0, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
glTranslatef(0.0+c-c/4, 0.0+d, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
glTranslatef(0.0+c/4, 0.0+d, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
glTranslatef(0.0-c/4, 0.0+d, 0.0);
gluCylinder(cylinder,15.0,15.0,0.1,100,4);
c += 60;
d += 25;
 }

        glEnd();
		
       
}

	
		
		
						
						glEnd();                                                                                                                                                                                               //Кінець
        glPopMatrix();
       glutSwapBuffers();
}
void Initialize()
{
        glClearColor(1.0, 1.0, 1.0, 1.0);
        glMatrixMode(GL_PROJECTION);
        glLoadIdentity();
        glOrtho(-WinWid/2, WinWid/2, -WinHei/2, WinHei/2, -1.0, 1.0);
}


int main (int argc, char** argv)
{
        //Ініціалізація
        glutInit(&argc, argv);
        glutInitDisplayMode(GLUT_DOUBLE|GLUT_RGB);
        glutInitWindowSize(WinWid,WinHei);
        glutInitWindowPosition(100,200);
        glutCreateWindow("Проект");
        //Реєстрація
        glutDisplayFunc(Draw);//Малювання
        Initialize();
        glutMainLoop();

        return 0;
}
